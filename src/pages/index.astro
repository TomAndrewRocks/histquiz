---
import "@/styles/global.css";
import HStack from "@/components/ui/hstack";
import { VStack } from "@/components/ui/vstack";
import { Image } from "astro:assets";
import { questions } from "@/mock/questions";
import Center from "@/components/ui/center";
import { Quiz } from "@/components/ui/quiz";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>HistQuiz</title>
  </head>
  <body>
    <div>
      <Center>
        <VStack className="flex items-center justify-center">
          <VStack
            className="text-2xl  absolute top-0 md:mt-10 mt-5 w-full text-center"
          >
            <h1 class="font-semibold">Hist | Quiz</h1>
            <span class="text-lg max-md:hidden"
              >Aprenda hist√≥ria de um jeito descolado!</span
            >
          </VStack>
          <HStack className={`items-center w-4/5 justify-between`}>
            <Image
              alt={"main"}
              width={600}
              height={500}
              loading="lazy"
              class={"max-lg:hidden max-xl:w-2/4 max-xl:h-2/4"}
              src={`https://histquiz-main.s3.amazonaws.com/histquiz-main.svg`}
            />
            <Quiz client:visible questions={questions} />
          </HStack>
        </VStack>
      </Center>
    </div>
    <footer
      class="fixed bg-white bottom-0 left-0 right-0 w-full border-t-2 p-4 text-black text-center"
    >
      <p>&copy; {new Date().getFullYear()} Tech Praia.</p>
    </footer>
  </body>
</html>
